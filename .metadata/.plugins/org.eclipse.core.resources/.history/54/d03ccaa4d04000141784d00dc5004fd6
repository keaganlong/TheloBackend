
/**
 * Module dependencies.
 */
var routes = [
              "./routes/user"
            ];

var express = require('express')
  , http = require('http')
  , path = require('path'),
  mongoose = require( 'mongoose' );

var app = express();

routes.forEach(function (routePath) {
    var route = require(routePath);
    route(app);
});

mongoose.connect('mongodb://localhost/TheloDev');

//var channelSchema = new mongoose.Schema({
